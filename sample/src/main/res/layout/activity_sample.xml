<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sample"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.holidaycheck.injectoradapter.sample.SampleActivity">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/controls"/>
    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">
        <Button android:id="@+id/controls_inject"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/control_inject"
                android:layout_weight="1"
                android:textSize="10dp"/>
        <Button android:id="@+id/controls_remove"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/control_remove"
                android:layout_weight="1"
                android:textSize="10dp"/>
        <Button android:id="@+id/controls_show_hide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/control_hide"
                android:layout_weight="1"
                android:textSize="10dp"/>
    </LinearLayout>
</RelativeLayout>
